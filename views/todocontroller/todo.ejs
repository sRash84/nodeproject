<%- include ("../partials/header.ejs") %>
<script src = "/js/todo-list.js" type="text/javascript"></script>
<div class="container">
    <div id="todo-table">
        <h1 class="text-center">My To do List</h1>
        <form>
            <div class="input-group">
                <!-- <input type="text" class="form-control" placeholder="Search for..."> -->
                <input type="text" class="form-control" placeholder="Add new item..." name="item" required>
                <span class="input-group-btn">
                  <button class="btn btn-default" type="Submit">Add Item!</button>
                </span>
            </div>
        </form>
        
        <ul class="list-group">
            <% for(var i = 0; i < todos.length; i++ ){ %>
                <li class="list-group-item"><%= todos[i].item %></li>
            <% } %>
        </ul>
    </div>
</div>
<%- include ("../partials/footer.ejs") %>